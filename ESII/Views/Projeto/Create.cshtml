@model ESII.Models.Projeto
@{
    ViewData["Title"] = "Criar Projeto";
}

<h2>Criar Projeto</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ClienteId">Cliente</label>
        <input asp-for="ClienteId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UtilizadorId">Utilizador Responsável</label>
        <input asp-for="UtilizadorId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
</form>
<a asp-action="Index">Voltar para a Lista</a>