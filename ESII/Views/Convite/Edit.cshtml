@model ESII.Models.Convite
@{
    ViewData["Title"] = "Editar Convite";
}

<h2>Editar Convite</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataEnvio"></label>
        <input asp-for="DataEnvio" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataResposta"></label>
        <input asp-for="DataResposta" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
<a asp-action="Index">Voltar para a Lista</a>
