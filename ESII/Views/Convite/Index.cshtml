@model IEnumerable<ESII.Models.Convite>
@{
    ViewData["Title"] = "Convites";
}

<h2>Lista de Convites</h2>
<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Status</th>
        <th>Data Envio</th>
        <th>Data Resposta</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Status</td>
            <td>@item.DataEnvio?.ToString("dd/MM/yyyy")</td>
            <td>@item.DataResposta?.ToString("dd/MM/yyyy")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
