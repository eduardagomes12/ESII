@model ESII.Models.RelatorioProj
@{
    ViewData["Title"] = "Excluir Relatório de Projeto";
}

<h2>Excluir Relatório de Projeto</h2>
<h3>Tem certeza que deseja excluir?</h3>
<div>
    <h4>Preço das Tarefas: @Model.PrecoTarefas</h4>
    <p>Preço Total: @Model.PrecoTotal</p>
    <p>Projeto: @Model.ProjetoId</p>
    <p>Cliente: @Model.ClienteId</p>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
</form>
<a asp-action="Index">Voltar para a Lista</a>