@model ESII.Models.RelatorioProj
@{
    ViewData["Title"] = "Criar Relatório de Projeto";
}

<h2>Criar Relatório de Projeto</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="PrecoTarefas"></label>
        <input asp-for="PrecoTarefas" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PrecoTotal"></label>
        <input asp-for="PrecoTotal" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProjetoId">Projeto</label>
        <input asp-for="ProjetoId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ClienteId">Cliente</label>
        <input asp-for="ClienteId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
</form>
<a asp-action="Index">Voltar para a Lista</a>