@model IEnumerable<ESII.Models.Tarefa>
@{
    ViewData["Title"] = "Tarefas";
}

<h2>Lista de Tarefas</h2>
<p>
    <a asp-action="Create">Criar Nova</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Descrição</th>
        <th>Data Início</th>
        <th>Data Fim</th>
        <th>Preço</th>
        <th>Status</th>
        <th>Projeto</th>
        <th>Utilizador</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Descricao</td>
            <td>@item.DataInicio?.ToString("dd/MM/yyyy")</td>
            <td>@item.DataFim?.ToString("dd/MM/yyyy")</td>
            <td>@item.Preco</td>
            <td>@item.Status</td>
            <td>@item.ProjetoId</td>
            <td>@item.UtilizadorId</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
