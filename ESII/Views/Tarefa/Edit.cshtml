@model ESII.Models.Tarefa
@{
    ViewData["Title"] = "Editar Tarefa";
}

<h2>Editar Tarefa</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataInicio"></label>
        <input asp-for="DataInicio" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataFim"></label>
        <input asp-for="DataFim" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProjetoId">Projeto</label>
        <input asp-for="ProjetoId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UtilizadorId">Utilizador</label>
        <input asp-for="UtilizadorId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
<a asp-action="Index">Voltar para a Lista</a>
