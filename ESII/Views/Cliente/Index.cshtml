@model IEnumerable<ESII.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo Cliente</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var cliente in Model)
    {
        <tr>
            <td>@cliente.Id</td>
            <td>@cliente.Nome</td>
            <td>@cliente.Email</td>
            <td>@cliente.Telefone</td>
            <td>
                <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
